<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TestActivity">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:text="Send Email"
        android:backgroundTint="@color/comment_card_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/take_photo"
        app:layout_constraintTop_toBottomOf="@id/send_email"
        app:layout_constraintStart_toStartOf="@id/send_email"
        app:layout_constraintEnd_toEndOf="@id/send_email"
        android:layout_marginTop="20dp"
        android:text="Take Photo"
        android:backgroundTint="@color/comment_card_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/pick_photo"
        app:layout_constraintTop_toBottomOf="@id/take_photo"
        app:layout_constraintStart_toStartOf="@id/send_email"
        app:layout_constraintEnd_toEndOf="@id/send_email"
        android:layout_marginTop="20dp"
        android:text="Pick Photo"
        android:backgroundTint="@color/comment_card_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_to_posts"
        app:layout_constraintTop_toBottomOf="@id/pick_photo"
        app:layout_constraintStart_toStartOf="@id/send_email"
        app:layout_constraintEnd_toEndOf="@id/send_email"
        android:layout_marginTop="20dp"
        android:text="Go To Posts Page "
        android:backgroundTint="@color/comment_card_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/go_to_photos"
        app:layout_constraintTop_toBottomOf="@id/go_to_posts"
        app:layout_constraintStart_toStartOf="@id/send_email"
        app:layout_constraintEnd_toEndOf="@id/send_email"
        android:layout_marginTop="20dp"
        android:text="Go To Photos Page "
        android:backgroundTint="@color/comment_card_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image"
        app:layout_constraintTop_toBottomOf="@id/go_to_photos"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/image_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>